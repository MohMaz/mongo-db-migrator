    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Sequential Mode",
            "type": "debugpy",
            "request": "launch",
            "module": "java_migration_tool.cli",
            "args": ["cloned_repos/spring-petclinic", "--mode", "sequential"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Debug Agentic Mode",
            "type": "debugpy",
            "request": "launch",
            "module": "java_migration_tool.cli",
            "args": ["cloned_repos/jboss-eap-quickstarts/kitchensink/", "--mode", "agentic"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}